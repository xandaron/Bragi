{
    "version": "2.0.0",
    "command": "",
    "args": [],
    "tasks": [
        {
            "label": "mkdir",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",
                "if not exist ./build mkdir ./build"
            ]
        },
        {
            "label": "compile_shaders",
            "type": "shell",
            "command": "./shaders/compile.bat"
        },
        {
            "label": "debug_build",
            "type": "shell",
            "command": "odin build . -debug -out:build/bragi-debug.exe",
            "group": "build"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "odin build . -out:build/bragi.exe",
            "group": "build"
        },
        {
            "label": "Build",
            "dependsOn": [
                "mkdir",
                "compile_shaders",
                "debug_build",
                "build"
            ]
        }
    ]
}